-content_for :body do
 :javascript
  $(function(){$( ".testing" ).draggable();});
 #wrapper
  %h3{:style => 'padding-bottom: 10px;'}
   Awesome Blog
  %div#navwrapper
   %ul{:class =>"floatleft", :id =>"nav"}
    =list_of(@blogs_container) do |blog|
     =link_to(blog, {:controller => 'posts',:action => 'index', :parent => blog}, 'content-type' => 'text/javascript',  :remote => true) #, "$('.related_posts').show()"
    %li
     %a.dmenu
      Create
     %ul#nav
      %li#drpdwn_font
       =link_to_function('Blog', "$('#form_wnd').show();")
      %li#drpdwn_font
       =link_to 'Post'
  %div#related_posts
  %div#form_wnd{:style =>'display:none; z-index:1000;' }
   =form_for :new, :url =>{:controller => 'blogs', :action => 'create'}, :html => {:multipart => true}, :remote => true do |f|
    %div
     = f.text_field :theme
     =f.hidden_field :usrid, :value => @user_id
    %div
     =link_to_function('Wanna a background picture?', "$('#background').trigger('click');", :class => 'attch_lnk')
     =f.file_field(:picture, :id=> 'background',:accept => 'image/png', :style =>'display:none;' )
    %div
     =f.submit 'Create', :onclick => "$('#form_wnd').hide('slow');"
  %div
   =image_tag('rails.png')
  %div.testing














